@page
@model WebApplication2.Pages.IndexModel

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>

<h2>Таблица сотрудников</h2>
<p><a href="/CreateEmployee">Добавить сотрудника</a></p>
<table>
    <thead>
    <tr>
        <th>Имя</th>
        <th>Фамилия</th>
        <th>Отчество</th>
        <th>Должность</th>
        <th>Дата найма</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
            @foreach (var user in Model.Employees)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.MiddleName</td>
                    <td>@user.Position</td>
                    <td>@user.HireDate</td>

                    <td>
                        <form method="post">
                            <a asp-page="EmployeeEdit" asp-route-id="@user.Id">Изменить</a>
                            <button type="submit" asp-page-handler="delete" asp-route-id="@user.Id">
                                Удалить
                            </button>
                        </form>
                    </td>
                </tr>
            }
    </tbody>
</table>

</body>